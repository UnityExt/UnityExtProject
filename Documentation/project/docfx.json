{
  
  "metadata": [
    {
      "src": [
        {
          "src":     "../../",
          "files":   [ 
            "UnityExt*.csproj"
          ],
          "exclude": []
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],  

  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "build-temp",
    "globalMetadataFiles": [],
    "globalMetadata": {
      "_appTitle":       "UnityExt API",
      "_appFooter":      "UnityExt API <b><span style=\"color:#00f\">/</span></b> 2020",
      "_appFaviconPath": "favicon.png",
      "_appLogoPath":    "logo.png"
    },
    "fileMetadataFiles": [],
    "template": ["templates/default","templates/unity"],
    "postProcessors": [],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  },
  
  "pdf": {
    "content": [
      { 
        "files": [
          "api/**.yml"          
        ],
        "exclude": [
          "**/toc.yml",
          "**/toc.md"
        ]
      },
      {        
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",      
          "toc.yml",
          "*.md",
          "pdf/*"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",          
          "**/toc.yml",
          "**/toc.md"
        ]
      },
      {
        "files": "pdf/toc.yml"
      }
    ],
    "resource": [
      {        
        "files": [
          "images/**"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**"          
        ]
      }
    ],
    "overwrite": [
      {        
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**"          
        ]
      }
    ],
    "wkhtmltopdf": {
      "filePath":            "../docfx/wkhtmltopdf/wkhtmltopdf.exe",
      "additionalArguments": "--enable-local-file-access"
    },
    "template": ["templates/default","templates/unity"],
    "dest": "./"
  }

}